<?xml version="1.0" encoding="UTF-8"?>
<information>
    
    <entries>
        <before>
            <entry name="word" />
        </before>
    </entries>
    
    <endogene>
        
        <!-- word starts with a capital letter and is not at Beginning of Sentence (BOS) -->
        <expression name="UpperNotBOS">
            <and>
                <left><unary action="isUpper">0</unary></left>
                <right><not><nullary action="BOS" /></not></right>
            </and>
        </expression>
        
        <!-- Abbreviation Before Noun (ABN) -->
        <!-- some: true if at least one element matches the token -->
        <list name="ABN" action="some">
            <element type="regexp" casing="i">^dr\.?$</element>
            <element type="regexp" casing="i">^mmes?\.?$</element>
            <element type="regexp" casing="i">^me?lles?\.?$</element>
            <element type="regexp" casing="i">^m(e|rs?)?\.?$</element>
            <element type="regexp" casing="i">^st\.?$</element>
        </list>
    </endogene>
    
    <exogene>
        <!-- "token" is a token dictionary, meaning that only one token needs -->
        <!-- to be checked -->
        <token name="ADJ" path="../../lefff/ADJ" />
        <token name="ADJWH" path="../../lefff/ADJWH" />
        <token name="ADV" path="../../lefff/ADV" />
        <token name="ADVWH" path="../../lefff/ADVWH" />
        <token name="CC" path="../../lefff/CC" />
        <token name="CLO" path="../../lefff/CLO" />
        <token name="CLR" path="../../lefff/CLR" />
        <token name="CLS" path="../../lefff/CLS" />
        <token name="CS" path="../../lefff/CS" />
        <token name="DET" path="../../lefff/DET" />
        <token name="DETWH" path="../../lefff/DETWH" />
        <token name="ET" path="../../lefff/ET" />
        <token name="I" path="../../lefff/I" />
        <token name="NC" path="../../lefff/NC" />
        <token name="NPP" path="../../lefff/NPP" />
        <token name="P" path="../../lefff/P" />
        <token name="P+D" path="../../lefff/P+D" />
        <token name="P+PRO" path="../../lefff/P+PRO" />
        <token name="PONCT" path="../../lefff/PONCT" />
        <token name="PREF" path="../../lefff/PREF" />
        <token name="PRO" path="../../lefff/PRO" />
        <token name="PROREL" path="../../lefff/PROREL" />
        <token name="PROWH" path="../../lefff/PROWH" />
        <token name="V" path="../../lefff/V" />
        <token name="VIMP" path="../../lefff/VIMP" />
        <token name="VINF" path="../../lefff/VINF" />
        <token name="VPP" path="../../lefff/VPP" />
        <token name="VPR" path="../../lefff/VPR" />
        <token name="VS" path="../../lefff/VS" />
    </exogene>
</information>
